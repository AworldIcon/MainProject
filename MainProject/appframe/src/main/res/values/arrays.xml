<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--自定义RecyclerView-->
    <declare-styleable name="MyRecyclerView">
        <attr name="layoutManagerType" format="enum">
            <enum name="linear_vertical" value="0"/>
            <enum name="linear_horizontal" value="1"/>
            <enum name="grid_layout" value="2"/>
            <enum name="staggered_grid_layout" value="3"/>
        </attr>
        <attr name="spanCount" format="integer"/>
        <attr name="divider_decoration_height" format="integer"/>
        <attr name="divider_decoration_width" format="integer"/>
        <attr name="divider_decoration_color" format="integer"/>
        <attr name="divider_decoration_drawable" format="integer"/>

    </declare-styleable>


    <!--字母排序可设置位置-->
    <declare-styleable name="WaveSideBar">
        <attr name="sidebar_lazy_respond" format="boolean"/>
        <attr name="sidebar_text_color" format="color"/>
        <attr name="sidebar_max_offset" format="dimension"/>
        <attr name="sidebar_position" format="enum">
            <enum name="right" value="0"/>
            <enum name="left" value="1"/>
        </attr>
        <attr name="sidebar_text_alignment" format="enum">
            <enum name="center" value="0"/>
            <enum name="left" value="1"/>
            <enum name="right" value="2" />
        </attr>
    </declare-styleable>

</resources>