<resources>

    <!--
      Base application theme, dependent on API level. This theme is replaced
      by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

    <style name="AppThemeBase" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/hut_theme</item>
        <item name="colorPrimaryDark">@color/hut_theme</item>
        <item name="colorAccent">@color/hut_theme</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppThemeBase">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!--  这个是加入的代码 -->
    <style name="popupwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/show_from_bottom</item>
        <!-- 指定显示的动画xml -->
        <item name="android:windowExitAnimation">@anim/hide2bottom</item>
        <!-- 指定消失的动画xml -->
    </style>

</resources>