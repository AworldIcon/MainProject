<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/bg_white"
    >
    <RelativeLayout
        android:id="@+id/posters_img_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/posters_text_tx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/woying_10_dip"
            android:textColor="@color/font_white"
            android:textSize="@dimen/woying_14_dip" />

        <RelativeLayout
            android:id="@+id/show_img_tip_ly"
            android:layout_width="match_parent"
            android:layout_height="@dimen/woying_20_dip"
            android:layout_alignBottom="@+id/posters_img"
            android:background="@color/bg_touming"
            android:visibility="gone"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/click_tosee_big_image"
                android:textColor="@color/font_black"
                android:textSize="@dimen/woying_10_dip" />

        </RelativeLayout>

        <com.coder.kzxt.views.StgImageView
            android:id="@+id/posters_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/headr_bottom_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/posters_img_ly">


        <LinearLayout
            android:id="@+id/posters_info_zong_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/woying_6_dip"
            >
            <TextView
                android:id="@+id/posters_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/woying_10_dip"
                android:layout_marginTop="@dimen/woying_10_dip"
                android:textColor="@color/font_black"
                android:textSize="@dimen/woying_14_dip"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/woying_10_dip"
                android:layout_marginLeft="@dimen/woying_10_dip"
                >

                <TextView
                    android:id="@+id/browse_num_tx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/gambit_look"
                    android:drawablePadding="@dimen/woying_2_dip"
                    android:layout_centerVertical="true"
                    android:textColor="@color/font_gray"
                    android:textSize="@dimen/woying_12_dip"
                    />

                <TextView
                    android:id="@+id/likeNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/like_num"
                    android:drawablePadding="@dimen/woying_2_dip"
                    android:layout_marginRight="@dimen/woying_10_dip"
                    android:background="@drawable/round_huang3_360"
                    android:paddingBottom="@dimen/woying_2_dip"
                    android:paddingTop="@dimen/woying_2_dip"
                    android:paddingLeft="@dimen/woying_4_dip"
                    android:paddingRight="@dimen/woying_4_dip"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:text="15"
                    android:textColor="@color/font_gray"
                    android:textSize="@dimen/woying_12_dip" />
            </RelativeLayout>

           </LinearLayout>


        <View
            android:id="@+id/fenge0"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/posters_info_zong_ly"
            android:layout_marginTop="@dimen/woying_10_dip"
            android:background="@color/gray_line" />

        <RelativeLayout
            android:id="@+id/posters_info_ly"
            android:layout_width="match_parent"
            android:layout_height="@dimen/woying_50_dip"
            android:layout_below="@+id/fenge0"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/user_info_ly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/woying_10_dip">

                <ImageView
                    android:id="@+id/user_img"
                    android:layout_width="@dimen/woying_35_dip"
                    android:layout_height="@dimen/woying_35_dip"
                    android:src="@drawable/default_me_myimg" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/woying_6_dip"
                    android:layout_toRightOf="@+id/user_img"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/user_tx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/font_black"
                        android:text="ss"
                        android:textSize="@dimen/woying_14_dip" />

                    <TextView
                        android:id="@+id/user_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/woying_4_dip"
                        android:textColor="@color/font_gray"
                        android:text="ss"
                        android:textSize="@dimen/woying_12_dip" />
                </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>
        <View
            android:id="@+id/fengeView"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/posters_info_ly"
            android:background="@color/gray_line" />


        <TextView
            android:id="@+id/com_num_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评论"
            android:textColor="@color/font_black"
            android:textSize="@dimen/woying_14_dip"
            android:layout_marginLeft="@dimen/woying_10_dip"
            android:layout_below="@+id/fengeView"
            android:layout_marginTop="@dimen/woying_20_dip"
            android:layout_marginBottom="@dimen/woying_20_dip"
            />

    </RelativeLayout>

</RelativeLayout>