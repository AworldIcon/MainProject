<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/view_sign_list"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:visibility="gone">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/grayLine"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/total_numbers"
            style="@style/font_gray_small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/woying_20_dip"
            android:text=""/>

        <View
            style="@style/grayVerticalLine"
            android:layout_marginBottom="@dimen/woying_10_dip"
            android:layout_marginTop="@dimen/woying_10_dip"/>

        <TextView
            android:id="@+id/sign_numbers"
            style="@style/font_gray_small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:gravity="center"
            android:padding="@dimen/woying_20_dip"
            android:text=""/>

        <View
            style="@style/grayVerticalLine"
            android:layout_marginBottom="@dimen/woying_10_dip"
            android:layout_marginTop="@dimen/woying_10_dip"/>

        <TextView
            android:id="@+id/un_sign_numbers"
            style="@style/font_gray_small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/woying_20_dip"
            android:text=""/>

    </LinearLayout>


    <View style="@style/grayHorizontallLine"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/font_normal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/woying_10_dip"
            android:text="@string/sign_start_time"/>

        <TextView
            android:id="@+id/sign_start_time"
            style="@style/font_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/woying_10_dip"
            android:text=""/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/font_normal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/woying_10_dip"
            android:text="@string/sign_end_time"/>

        <TextView
            android:id="@+id/sign_end_time"
            style="@style/font_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/woying_10_dip"
            android:text=""/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/font_normal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/woying_10_dip"
            android:text="@string/sign_time_length"/>

        <TextView
            android:id="@+id/sign_time_length"
            style="@style/font_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/woying_10_dip"
            android:text=""/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/font_normal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/woying_10_dip"
            android:text="@string/sign_range"/>

        <TextView
            android:id="@+id/sign_range"
            style="@style/font_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/woying_10_dip"
            android:text=""/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/font_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/woying_10_dip"
            android:text="@string/sign_location"/>

        <TextView
            android:id="@+id/sign_location"
            style="@style/font_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="@dimen/woying_10_dip"
            android:text=""/>
    </LinearLayout>

</LinearLayout>