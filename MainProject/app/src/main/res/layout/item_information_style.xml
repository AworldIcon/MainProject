<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ripple_orange"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/woying_10_dip"
                android:paddingLeft="@dimen/woying_10_dip"
                android:paddingRight="@dimen/woying_10_dip">


    <ImageView
        android:id="@+id/image1"
        style="@style/image_information"
        android:layout_marginRight="@dimen/woying_6_dip"
        android:src="@drawable/my_course_def"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/image0"
        android:layout_width="@dimen/woying_90_dip"
        android:layout_height="@dimen/woying_64_dip"
        android:layout_marginRight="@dimen/woying_6_dip"
        android:layout_marginTop="@dimen/woying_5_dip"
        android:scaleType="centerCrop"
        />


    <TextView
        android:id="@+id/title"
        style="@style/font_normal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/image0"
        android:layout_marginTop="@dimen/woying_4_dip"
        android:layout_toRightOf="@id/image0"
        android:ellipsize="end"
        android:maxLines="2"
        android:text=""/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/image0"
        android:layout_toRightOf="@id/image0"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/comeFrom"
            style="@style/font_gray_small_single"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""/>

        <TextView
            android:id="@+id/time"
            style="@style/font_gray_small_single"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>

    </LinearLayout>


</RelativeLayout>
