<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/catalogue_ripple"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/catalogue_content_layout"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/woying_10_dip"
        android:layout_height="@dimen/woying_38_dip">

        <RelativeLayout
            android:id="@+id/img_ly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/woying_10_dip">

            <ImageView
                android:id="@+id/catalogue_content_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/study_finsh_img"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/catalogue_content_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/woying_6_dip"
            android:layout_marginRight="@dimen/woying_6_dip"
            android:layout_toLeftOf="@+id/right_layout"
            android:layout_toRightOf="@id/img_ly"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/woying_12_dip" />

        <LinearLayout
            android:id="@+id/right_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_marginRight="@dimen/woying_60_dip"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/isPublic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/round_hui_360"
                    android:gravity="center_vertical|right"
                    android:paddingBottom="@dimen/woying_2_dip"
                    android:paddingLeft="@dimen/woying_8_dip"
                    android:paddingRight="@dimen/woying_8_dip"
                    android:paddingTop="@dimen/woying_2_dip"
                    android:text="@string/free"
                    android:textColor="@color/font_gray"
                    android:textSize="@dimen/woying_8_dip"
                    android:visibility="gone"
                    />

                 <ImageView
                     android:id="@+id/inevitable_iv"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:src="@drawable/inevitable"
                     android:visibility="gone"
                     />

                <TextView
                    android:id="@+id/isCoinExchange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/personcenter_coin"
                    android:ellipsize="end"
                    android:gravity="center_vertical|right"
                    android:singleLine="true"
                    android:text=" @string/exchange"
                    android:textColor="@color/font_price_coin"
                    android:textSize="@dimen/woying_8_dip"
                    android:visibility="gone"
                    />

            </RelativeLayout>

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/video_time_layout"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_marginRight="@dimen/woying_10_dip"
            >
            <TextView
                android:id="@+id/video_all_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="00:00:00"
                android:textColor="@color/font_gray"
                android:textSize="@dimen/woying_11_dip"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/exercise_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/round_hong"
                android:paddingBottom="@dimen/woying_1_dip"
                android:paddingLeft="@dimen/woying_4_dip"
                android:paddingRight="@dimen/woying_4_dip"
                android:paddingTop="@dimen/woying_1_dip"
                android:text="@string/exercise"
                android:textColor="@color/white"
                android:textSize="@dimen/woying_11_dip"
                android:visibility="gone"
                />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>