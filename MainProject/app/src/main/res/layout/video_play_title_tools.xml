<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/toptm"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/woying_40_dip"
        android:layout_alignTop="@+id/video_view"
        android:background="@color/bg_black"
        android:gravity="center_vertical">

        <RelativeLayout
            android:id="@+id/img_back_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/woying_8_dip"
                android:src="@drawable/video_back" />

            <View
                android:id="@+id/gray_line"
                android:layout_width="2px"
                android:layout_height="@dimen/woying_18_dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/woying_10_dip"
                android:layout_toRightOf="@id/img_back"
                android:background="@color/new_gray_line" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/woying_20_dip"
                android:layout_toRightOf="@id/gray_line"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/font_white"
                android:textSize="@dimen/woying_13_dip" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/share_ly"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:visibility="invisible"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="2px"
                        android:layout_height="@dimen/woying_18_dip"
                        android:layout_gravity="center_vertical"
                        android:background="@color/new_gray_line" />

                    <ImageView
                        android:id="@+id/img_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/woying_10_dip"
                        android:layout_weight="1"
                        android:background="@drawable/video_share" />
                    <View
                        android:layout_width="2px"
                        android:layout_height="@dimen/woying_18_dip"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/woying_10_dip"
                        android:background="@color/new_gray_line" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ask_ly"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:visibility="invisible"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/img_ask"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/woying_10_dip"
                        android:layout_marginRight="@dimen/woying_10_dip"
                        android:background="@drawable/video_ask" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/download_ly"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/img_download"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/woying_10_dip"
                        android:background="@drawable/video_download" />
                    <View
                        android:layout_width="2px"
                        android:layout_height="@dimen/woying_18_dip"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/woying_10_dip"
                        android:background="@color/new_gray_line" />
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
