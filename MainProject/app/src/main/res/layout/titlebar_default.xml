<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/titleLy"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/woying_40_dip"
        android:background="@color/first_theme">

        <ImageView
            android:id="@+id/leftImage"
            android:layout_width="@dimen/woying_50_dip"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:src="@drawable/back_up" />
        <ImageView
            android:id="@+id/left_Image"
            android:layout_width="@dimen/woying_18_dip"
            android:layout_height="@dimen/woying_18_dip"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/woying_15_dip"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/leftText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/woying_12_dip" />

        <TextView
            android:id="@+id/title"
            android:layout_width="@dimen/woying_160_dip"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/woying_50_dip"
            android:layout_marginRight="@dimen/woying_50_dip"
            android:drawablePadding="4dip"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/woying_14_dip" />

        <TextView
            android:id="@+id/rightText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/woying_10_dip"
            android:textColor="@color/white"
            android:textSize="@dimen/woying_12_dip" />

        <ImageView
            android:id="@+id/rightImage2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/woying_20_dip"
            android:layout_toLeftOf="@+id/rightImage" />

        <ImageView
            android:id="@+id/rightImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/woying_10_dip" />
    </RelativeLayout>

    <View
        android:id="@+id/fenge_view"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_below="@+id/titleLy"
        android:background="@color/gray_line"
        android:visibility="gone" />

</RelativeLayout>