<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

    <RelativeLayout
        android:id="@+id/zong_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/woying_6_dip">

        <ImageView
            android:id="@+id/user_head_img"
            android:layout_width="@dimen/woying_35_dip"
            android:layout_height="@dimen/woying_35_dip"
            android:layout_marginLeft="@dimen/woying_10_dip"
            android:layout_marginTop="@dimen/woying_6_dip"
            android:src="@drawable/default_me_myimg" />

        <TextView
            android:id="@+id/adopt_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/woying_10_dip"
            android:layout_marginTop="@dimen/woying_12_dip"
            android:background="@drawable/round_hui_360"
            android:drawableLeft="@drawable/star_down"
            android:paddingBottom="@dimen/woying_4_dip"
            android:paddingLeft="@dimen/woying_8_dip"
            android:paddingRight="@dimen/woying_8_dip"
            android:paddingTop="@dimen/woying_4_dip"
            android:text="@string/adopt"
            android:textColor="@color/font_yellow_question"
            android:textSize="@dimen/woying_14_dip" />

        <LinearLayout
            android:id="@+id/best_answer_ly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <RatingBar
                android:id="@+id/ratingbar"
                style="@style/roomRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:numStars="5"
                android:stepSize="1" />

            <ImageView
                android:id="@+id/best_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/best" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/user_head_img"
            android:layout_marginLeft="@dimen/woying_10_dip"
            android:layout_marginRight="@dimen/woying_10_dip"
            android:layout_marginTop="@dimen/woying_15_dip"
            android:layout_toRightOf="@+id/user_head_img"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/user_name_tx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/font_question_blue"
                    android:textSize="@dimen/woying_14_dip" />

            </LinearLayout>

            <TextView
                android:id="@+id/question_content_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/woying_10_dip"
                android:textColor="@color/font_black"
                android:textSize="@dimen/woying_14_dip" />

            <ImageView
                android:id="@+id/question_single_img_iv"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/woying_140_dip"
                android:layout_marginTop="@dimen/woying_4_dip"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:id="@+id/imgs_ly"
                android:layout_width="match_parent"
                android:layout_height="@dimen/woying_80_dip"
                android:layout_marginRight="@dimen/woying_12_dip"
                android:layout_marginTop="@dimen/woying_4_dip"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/question_one_img_iv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/woying_4_dip"
                    android:layout_weight="1"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/question_two_img_iv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/woying_4_dip"
                    android:layout_marginTop="@dimen/woying_4_dip"
                    android:layout_weight="1"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/question_tr_img_iv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/woying_4_dip"
                    android:layout_marginTop="@dimen/woying_4_dip"
                    android:layout_weight="1"
                    android:scaleType="centerCrop" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/woying_6_dip"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/question_time_tx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/font_gray"
                    android:textSize="@dimen/woying_12_dip" />

                <TextView
                    android:id="@+id/question_reply_num_tx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawableLeft="@drawable/classtopic_particulars_img"
                    android:drawablePadding="@dimen/woying_2_dip"
                    android:textColor="@color/font_gray" />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
