<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/re_share_file"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_share_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10.0dip"
        android:layout_marginLeft="10.0dip"
        android:layout_marginTop="10.0dip"
        android:background="@drawable/class_share_file" />

    <TextView
        android:id="@+id/tv_share_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_share_file"
        android:layout_marginLeft="10.0dip"
        android:layout_toRightOf="@id/iv_share_file"
        android:textColor="@color/font_black" />

    <RelativeLayout
        android:id="@+id/ll_share_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_share_file"
        android:layout_marginLeft="10.0dip"
        android:layout_toRightOf="@id/iv_share_file">

        <TextView
            android:id="@+id/tv_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font_gray"
            android:textSize="12.0dip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40.0dip"
            android:text="@string/file_come_from"
            android:textColor="@color/font_gray"
            android:textSize="12.0dip" />

        <TextView
            android:id="@+id/tv_share_file_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70.0dip"
            android:textColor="@color/font_blue"
            android:textSize="12.0dip" />

        <TextView
            android:id="@+id/tv_share_file_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10.0dip"
            android:textColor="@color/font_gray"
            android:textSize="12.0dip" />

    </RelativeLayout>

    <View
        android:id="@+id/class_fenge"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/iv_share_file"
        android:layout_toRightOf="@id/iv_share_file"
        android:background="@color/gray_line" />
</RelativeLayout>
