<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_show__image_"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="@color/font_black"
    tools:context="com.coder.kzxt.poster.activity.Show_Image_Activity">

    <ImageView
        android:id="@+id/save_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/show_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titleLy"
        android:layout_centerInParent="true" />

    <ImageView
        android:id="@+id/fail_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/load_failure_big"
        android:visibility="gone" />

    <TextView
        android:id="@+id/save_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/woying_20_dip"
        android:layout_marginLeft="@dimen/woying_20_dip"
        android:background="@drawable/round_white_trans_360"
        android:paddingBottom="@dimen/woying_6_dip"
        android:paddingLeft="@dimen/woying_10_dip"
        android:paddingRight="@dimen/woying_10_dip"
        android:paddingTop="@dimen/woying_6_dip"
        android:text="@string/save"
        android:textColor="@color/white"
        android:textSize="@dimen/woying_14_dip" />


</RelativeLayout>
