<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:padding="@dimen/woying_5_dip"
              android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/allLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/ripple_orange"
            >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/userFace"
                android:layout_width="@dimen/woying_40_dip"
                android:layout_height="@dimen/woying_40_dip"
                android:layout_marginBottom="@dimen/woying_10_dip"
                android:layout_marginLeft="@dimen/woying_10_dip"
                android:layout_marginTop="@dimen/woying_10_dip"
                android:src="@drawable/default_me_myimg"
                tools:ignore="ContentDescription"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/woying_6_dip"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/userName"
                    style="@style/font_normal_single"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/woying_4_dip"/>

                <TextView
                    android:id="@+id/createTime"
                    style="@style/font_gray_small_single"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/woying_6_dip"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/allContentLy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/bg_gray"/>


            <RelativeLayout
                android:id="@+id/imageRy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/stgImage"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/woying_160_dip"
                    android:scaleType="centerCrop">
                </ImageView>
            </RelativeLayout>

            <TextView
                android:id="@+id/content2"
                android:textColor="@color/font_white"
                android:textSize="@dimen/woying_14_dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="14"
                android:minLines="2"
                android:padding="@dimen/woying_10_dip"
                android:visibility="gone"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/bg_gray"/>

            <TextView
                android:id="@+id/content1"
                style="@style/font_normal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="4"
                android:paddingLeft="@dimen/woying_10_dip"
                android:paddingRight="@dimen/woying_10_dip"
                android:paddingTop="@dimen/woying_10_dip"
                tools:ignore="ContentDescription"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/look_comment_Ly"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/look_count"
                style="@style/font_gray_small_single"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/gambit_look"
                android:drawablePadding="@dimen/woying_4_dip"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxWidth="@dimen/woying_200_dip"
                android:padding="@dimen/woying_10_dip"
                tools:ignore="ContentDescription"/>

            <TextView
                android:id="@+id/comment_count"
                style="@style/font_gray_small_single"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/gambit_reply"
                android:drawablePadding="@dimen/woying_4_dip"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxWidth="@dimen/woying_200_dip"
                android:padding="@dimen/woying_10_dip"
                tools:ignore="ContentDescription"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/bg_gray"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/like_count"
                style="@style/font_normal_single"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:paddingBottom="@dimen/woying_10_dip"
                android:paddingTop="@dimen/woying_10_dip"
                tools:ignore="ContentDescription"/>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/woying_10_dip"
                android:layout_marginTop="@dimen/woying_10_dip"
                android:background="@color/gray_line"/>

            <LinearLayout
                android:id="@+id/likeLy"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/likeImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/like_unselect"
                    tools:ignore="ContentDescription"/>
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>