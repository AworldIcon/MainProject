<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/range_bgColor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/classImage"
        android:layout_width="@dimen/woying_26_dip"
        android:layout_margin="@dimen/woying_10_dip"
        android:layout_height="@dimen/woying_26_dip"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/className"
        style="@style/font_normal_single"
        android:layout_width="0dip"
        android:layout_height="@dimen/woying_22_dip"
        android:gravity="center_vertical"
        android:layout_margin="@dimen/woying_10_dip"
        android:layout_weight="1"
        android:text="计算机二班"/>

    <TextView
        android:id="@+id/sign"
        android:textColor="@color/first_theme"
        android:textSize="@dimen/woying_10_dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/round_huang_main"
        android:paddingTop="@dimen/woying_2_dip"
        android:paddingBottom="@dimen/woying_2_dip"
        android:paddingLeft="@dimen/woying_12_dip"
        android:paddingRight="@dimen/woying_12_dip"
        android:layout_marginRight="@dimen/woying_10_dip"
        android:text="点名"/>

</LinearLayout>