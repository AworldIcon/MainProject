<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_class_detail"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/class_img"
        android:layout_width="@dimen/woying_64_dip"
        android:layout_height="@dimen/woying_64_dip"
        android:scaleType="fitXY"
        android:src="@drawable/course_default" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="@dimen/woying_10_dip"
        android:orientation="vertical"
        android:paddingBottom="@dimen/woying_2_dip"
        android:paddingTop="@dimen/woying_2_dip">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/class_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/class_status"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/font_black"
                android:textSize="@dimen/woying_13_dip" />

            <TextView
                android:id="@+id/class_status"
                android:layout_width="@dimen/woying_38_dip"
                android:layout_height="@dimen/woying_14_dip"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/woying_3_dip"
                android:layout_marginRight="@dimen/woying_8_dip"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/woying_10_dip" />
        </RelativeLayout>

        <TextView
            android:id="@+id/class_teacher"
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:singleLine="true"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/woying_11_dip" />

        <TextView
            android:id="@+id/class_learner_number"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/woying_16_dip"
            android:background="@drawable/round_hui_360"
            android:drawableLeft="@drawable/member_gray"
            android:drawablePadding="@dimen/woying_4_dip"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/woying_7_dip"
            android:paddingRight="@dimen/woying_7_dip"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/woying_10_dip" />
    </LinearLayout>

</LinearLayout>