<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/woying_200_dip"
        android:layout_height="@dimen/woying_150_dip"
        android:background="@color/bg_white">

        <EditText
            android:id="@+id/refuse_resaon"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/woying_100_dip"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@color/transparent"
            android:hint="@string/input_refuse_reasoon_hint"
            android:lineSpacingExtra="@dimen/woying_3_dip"
            android:textColor="@color/font_gray"
            android:textColorHint="@color/font_gray"
            android:textSize="@dimen/woying_14_dip" />

        <View
            android:id="@+id/fenge"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/refuse_resaon"
            android:background="@color/gray_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/woying_60_dip"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/fenge"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/woying_8_dip"
            android:paddingTop="@dimen/woying_8_dip"
            android:weightSum="2">

            <TextView
                android:id="@+id/cancle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center_horizontal"
                android:text="@string/cancel"
                android:textColor="@color/font_blue"
                android:textSize="@dimen/woying_16_dip" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/gray_line" />

            <TextView
                android:id="@+id/confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center_horizontal"
                android:text="@string/password_dialog_ensure"
                android:textColor="@color/font_blue"
                android:textSize="@dimen/woying_16_dip" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>