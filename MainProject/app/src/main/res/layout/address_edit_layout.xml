<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_edit_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:orientation="vertical">

    <include
        android:id="@+id/title_layout"
        layout="@layout/titlebar_default"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/tv_recipients"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/woying_2_dip"
                android:padding="@dimen/woying_10_dip"
                android:text="@string/address_recipients"
                android:textColor="@color/sign_font_black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_address_recipients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_recipients"
                android:background="@null"
                android:inputType="text"
                android:padding="@dimen/woying_10_dip"
                android:singleLine="true"
                android:maxLength="8"
                android:textColor="@color/font_gray"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/iv_recipients_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/woying_5_dip"
                android:layout_marginLeft="@dimen/woying_10_dip"
                android:layout_marginRight="@dimen/woying_20_dip"
                android:layout_marginTop="@dimen/woying_15_dip"
                android:background="@drawable/iv_address_delete"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/woying_15_dip"
            android:layout_marginRight="@dimen/woying_15_dip"
            android:background="@color/gray_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/woying_10_dip"
                android:text="@string/phone_number"
                android:textColor="@color/sign_font_black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_number"
                android:background="@null"
                android:inputType="number"
                android:padding="@dimen/woying_10_dip"
                android:textColor="@color/font_gray"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/iv_phone_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/woying_5_dip"
                android:layout_marginLeft="@dimen/woying_10_dip"
                android:layout_marginRight="@dimen/woying_20_dip"
                android:layout_marginTop="@dimen/woying_15_dip"
                android:background="@drawable/iv_address_delete"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/woying_15_dip"
            android:layout_marginRight="@dimen/woying_15_dip"
            android:background="@color/gray_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/tv_area"
                android:layout_width="@dimen/woying_0_dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/woying_10_dip"
                android:text="@string/order_area"
                android:textColor="@color/sign_font_black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/et_order_area"
                android:layout_width="@dimen/woying_0_dip"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_area"
                android:layout_weight="4"
                android:background="@null"
                android:inputType="textMultiLine"
                android:padding="@dimen/woying_10_dip"
                android:textColor="@color/font_gray"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/iv_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/woying_10_dip"
                android:layout_marginRight="@dimen/woying_20_dip"
                android:background="@drawable/iv_address_delete"
                android:visibility="gone" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/woying_15_dip"
            android:layout_marginRight="@dimen/woying_15_dip"
            android:background="@color/gray_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/tv_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/woying_10_dip"
                android:text="@string/detail_address"
                android:textColor="@color/sign_font_black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_detail_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_detail"
                android:background="@null"
                android:inputType="textMultiLine"
                android:padding="@dimen/woying_10_dip"
                android:maxLength="100"
                android:textColor="@color/font_gray"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/iv_detail_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/woying_5_dip"
                android:layout_marginLeft="@dimen/woying_10_dip"
                android:layout_marginRight="@dimen/woying_20_dip"
                android:layout_marginTop="@dimen/woying_15_dip"
                android:background="@drawable/iv_address_delete"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/woying_15_dip"
            android:layout_marginRight="@dimen/woying_15_dip"
            android:background="@color/gray_line" />
    </LinearLayout>
</LinearLayout>
