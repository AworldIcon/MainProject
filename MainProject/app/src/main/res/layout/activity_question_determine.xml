<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_question_determine"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    tools:context="com.coder.kzxt.buildwork.activity.QuestionDetermineActivity">
    <include
        android:id="@+id/title_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/titlebar_default" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_below="@+id/title_layout">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/woying_30_dip"
                    android:background="@color/bg_gray"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/determine"
                        android:textSize="@dimen/woying_12_dip"
                        android:textColor="@color/font_black"
                        android:layout_centerInParent="true"
                        />
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/head"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_below="@+id/title_layout"
                    android:layout_marginLeft="@dimen/woying_12_dip"
                    android:layout_marginRight="@dimen/woying_12_dip"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/woying_16_dip"
                            android:layout_marginRight="@dimen/woying_16_dip"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/font_black"
                                android:layout_marginTop="@dimen/woying_5_dip"
                                android:textSize="@dimen/woying_12_dip"
                                android:text="题干:"
                                />
                            <com.coder.kzxt.buildwork.views.ContainsEmojiEditText
                                android:id="@+id/posters_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="top|left"
                                android:hint="@string/enter_question_name"
                                android:background="@null"
                                android:textColor="@color/font_black"
                                android:layout_marginTop="@dimen/woying_22_dip"
                                android:textSize="@dimen/woying_12_dip"
                                android:minHeight="@dimen/woying_80_dip"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginBottom="@dimen/woying_4_dip"
                                android:layout_marginRight="@dimen/woying_10_dip"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/cu_number_con"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/no_num"
                                    android:textColor="@color/font_gray"
                                    android:textSize="@dimen/woying_10_dip"
                                    android:visibility="invisible"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/fenge"
                                    android:textColor="@color/font_gray"
                                    android:textSize="@dimen/woying_10_dip"
                                    android:visibility="invisible"
                                    />

                                <TextView
                                    android:id="@+id/all_number_con"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/num_five_hundred"
                                    android:textColor="@color/font_gray"
                                    android:textSize="@dimen/woying_10_dip"
                                    android:visibility="invisible"
                                    />
                            </LinearLayout>
                        </RelativeLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/woying_1_dip"
                            android:background="@color/bg_gray"
                            android:visibility="invisible"
                            />
                        <RelativeLayout
                            android:id="@+id/viewgroup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/woying_16_dip"
                            android:layout_marginTop="@dimen/woying_13_dip"
                            android:layout_marginBottom="@dimen/woying_6_dip"
                            android:layout_marginRight="@dimen/woying_12_dip"
                            >
                            <RelativeLayout
                                android:id="@+id/photo_layout"
                                android:layout_width="@dimen/woying_85_dip"
                                android:layout_height="@dimen/woying_60_dip"
                                android:layout_alignParentLeft="true"
                                android:visibility="gone">
                                <ImageView
                                    android:id="@+id/posters_img"
                                    android:layout_width="@dimen/woying_85_dip"
                                    android:layout_height="@dimen/woying_60_dip"
                                    android:scaleType="fitXY"
                                    android:layout_alignParentLeft="true"
                                    />
                                <ImageView
                                    android:id="@+id/dele_photo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/dele_work_photo"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentRight="true"
                                    />
                            </RelativeLayout>

                            <TextView
                                android:id="@+id/picture_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/image"
                                android:textColor="@color/font_gray"
                                android:textSize="@dimen/woying_14_dip"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:visibility="invisible"
                                />

                            <ImageView
                                android:id="@+id/replace_tx"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:src="@drawable/photo_answer"
                                android:visibility="gone"
                                />
                            <TextView
                                android:id="@+id/notice_photo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/only_one_image"
                                android:textColor="@color/font_gray"
                                android:textSize="@dimen/woying_12_dip"
                                android:layout_alignParentBottom="true"
                                android:layout_toLeftOf="@+id/replace_tx"
                                android:layout_marginRight="@dimen/woying_25_dip"
                                android:layout_alignParentRight="true"
                                android:visibility="gone"
                                />
                        </RelativeLayout>
                    </LinearLayout>
                    <View
                        android:id="@+id/fenge0"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/woying_1_dip"
                        android:background="@color/bg_gray"
                        android:layout_marginTop="@dimen/woying_3_dip"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/woying_42_dip"
                        android:orientation="horizontal">
                        <RelativeLayout
                            android:id="@+id/true_image_layout"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_centerInParent="true"
                                >
                                <ImageView
                                    android:id="@+id/true_image"
                                    android:layout_width="@dimen/woying_12_dip"
                                    android:layout_height="@dimen/woying_12_dip"
                                    android:src="@drawable/img_radio_button_checkon"
                                    android:layout_gravity="center_vertical"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="  正确"
                                    android:textSize="@dimen/woying_12_dip"
                                    android:textColor="@color/font_black"
                                    android:layout_gravity="center_vertical"/>
                            </LinearLayout>

                        </RelativeLayout>
                        <View
                            android:layout_width="@dimen/woying_1_dip"
                            android:layout_height="match_parent"
                            android:background="@color/bg_gray"/>
                        <RelativeLayout
                            android:id="@+id/false_image_layout"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_centerInParent="true"
                                >
                                <ImageView
                                    android:id="@+id/false_image"
                                    android:layout_width="@dimen/woying_12_dip"
                                    android:layout_height="@dimen/woying_12_dip"
                                    android:src="@drawable/img_radio_button_checkoff"
                                    android:layout_gravity="center_vertical"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="  错误"
                                    android:textSize="@dimen/woying_12_dip"
                                    android:textColor="@color/font_black"
                                    android:layout_gravity="center_vertical"/>
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/woying_1_dip"
                        android:background="@color/bg_gray"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/woying_10_dip"
                        android:layout_marginTop="@dimen/woying_10_dip"
                        android:layout_marginLeft="@dimen/woying_14_dip"
                        android:layout_marginRight="@dimen/woying_14_dip"
                        >
                        <LinearLayout
                            android:id="@+id/type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:id="@+id/essay"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/easy"
                                android:textColor="@color/font_white"
                                android:background="@drawable/choice_type"
                                android:gravity="center"
                                android:textSize="@dimen/woying_12_dip"
                                />
                            <TextView
                                android:id="@+id/normal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/normal"
                                android:textColor="@color/font_black"
                                android:background="@drawable/choice_type1"
                                android:gravity="center"
                                android:textSize="@dimen/woying_12_dip"
                                />
                            <TextView
                                android:id="@+id/hard"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/hard"
                                android:textColor="@color/font_black"
                                android:background="@drawable/choice_type1"
                                android:gravity="center"
                                android:textSize="@dimen/woying_12_dip"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/scroe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_alignParentRight="true"
                            >
                            <TextView
                                android:id="@+id/dele_score"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="-"
                                android:textColor="@color/font_red"
                                android:background="@drawable/choice_type1"
                                android:textSize="@dimen/woying_12_dip"
                                />
                            <TextView
                                android:id="@+id/score"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="5.0分"
                                android:textColor="@color/font_black"
                                android:background="@drawable/choice_type1"
                                android:textSize="@dimen/woying_12_dip"
                                />
                            <TextView
                                android:id="@+id/add_score"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="+"
                                android:textColor="@color/font_blue"
                                android:background="@drawable/choice_type1"
                                android:textSize="@dimen/woying_12_dip"
                                />
                        </LinearLayout>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/woying_1_dip"
                        android:background="@color/bg_gray"
                        android:layout_marginBottom="@dimen/woying_3_dip"
                        android:visibility="invisible"
                        />
                    <Button
                        android:id="@+id/save_btn"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/woying_40_dip"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="@dimen/woying_20_dip"
                        android:layout_marginRight="@dimen/woying_20_dip"
                        android:text="保 存"
                        android:textSize="@dimen/woying_14_dip"
                        android:textColor="@color/font_white"
                        android:background="@drawable/round_theme"
                        android:layout_marginBottom="@dimen/woying_10_dip"
                        android:layout_marginTop="@dimen/woying_30_dip"
                        />
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
    <include layout="@layout/loading"/>
</RelativeLayout>
