<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_gray"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/woying_50_dip"
        android:layout_marginLeft="@dimen/woying_10_dip"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/woying_12_dip"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:textColor="@color/font_gray"
            />
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/woying_4_dip"
            >

            <ImageView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/woying_6_dip"
                android:background="@color/font_blue" />

            <ImageView
                android:id="@+id/liveLesson_typeImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/livelesson_ing" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/woying_35_dip"
            android:background="@color/bg_white"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/woying_10_dip"
            android:layout_marginRight="@dimen/woying_10_dip"
            >

            <TextView
                android:id="@+id/replay_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_black"
                android:textSize="@dimen/woying_14_dip"
                android:layout_marginLeft="@dimen/woying_4_dip"
                android:text="时间手机"
                android:layout_gravity="center_vertical"
                />


        </LinearLayout>

    </LinearLayout>


</RelativeLayout>