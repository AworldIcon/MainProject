<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/item_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/woying_40_dip"
        android:gravity="center_vertical"
        android:background="@drawable/ripple_orange"
        >
        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/woying_25_dip"
            android:layout_height="@dimen/woying_25_dip"
            android:layout_centerVertical="true"
            android:src="@drawable/discovery_default"
            android:scaleType="fitXY"
            android:layout_marginLeft="@dimen/woying_15_dip"/>
        <TextView
            android:id="@+id/text"
            android:layout_toRightOf="@+id/image"
            style="@style/font_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:maxLength="6"
            android:ellipsize="end"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/woying_10_dip"/>
    </RelativeLayout>
    <View
        android:id="@+id/fenge_view"
        android:layout_below="@+id/item_rl"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="@dimen/woying_10_dip"
        android:background="@color/bg_gray"/>
</RelativeLayout>