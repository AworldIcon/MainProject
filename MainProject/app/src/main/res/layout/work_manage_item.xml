<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/bg_white">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/woying_6_dip"
        android:background="@color/bg_gray"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/woying_14_dip"
        android:layout_marginRight="@dimen/woying_10_dip"
        >
        <LinearLayout
            android:id="@+id/left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/woying_3_dip"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/woying_5_dip"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/woying_5_dip"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/work_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/font_black"
                    android:textSize="@dimen/woying_12_dip"
                    android:maxLength="20"
                    />
                <TextView
                    android:id="@+id/build_self"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/font_orange"
                    android:textSize="@dimen/woying_12_dip"
                    android:layout_marginLeft="@dimen/woying_5_dip"
                    android:background="@drawable/round_orange"
                    android:text="自建"
                    android:visibility="gone"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/woying_7_dip"
                android:layout_marginBottom="@dimen/woying_2_dip"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/woying_12_dip"
                    android:textColor="@color/font_black"
                    android:text="题量: "
                    />
                <TextView
                    android:id="@+id/work_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/woying_12_dip"
                    android:textColor="@color/font_gray"
                    />
                <TextView
                    android:layout_marginLeft="@dimen/woying_5_dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/woying_12_dip"
                    android:textColor="@color/font_red"
                    android:text="满分: "
                    />
                <TextView
                    android:id="@+id/score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/woying_12_dip"
                    android:textColor="@color/font_red"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/woying_5_dip"
                android:layout_marginBottom="@dimen/woying_3_dip"
                >
                <TextView
                    android:id="@+id/creator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/woying_5_dip"
                    android:text="创建者:"
                    android:visibility="gone"
                    android:textColor="@color/font_gray"/>
                <TextView
                    android:id="@+id/create_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/font_gray"
                    android:textSize="@dimen/woying_12_dip"
                    android:text="时间"
                    />
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/class_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/woying_5_dip"
                >
                <TextView
                    android:id="@+id/class_names"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/font_gray"
                    android:textSize="@dimen/woying_12_dip"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_marginRight="@dimen/woying_20_dip"
                    android:text="1班、2班、3班、4班、5班、6班、7班1345641564654645"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/department_go"/>
            </RelativeLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/button"
            android:text="发布"
            android:layout_width="@dimen/woying_45_dip"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/woying_2_dip"
            android:textSize="@dimen/woying_12_dip"
            android:textColor="@color/font_white"
            android:layout_alignBottom="@+id/left"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/save_round_blue"
            android:visibility="gone"
            android:layout_marginBottom="21dp" />


    </RelativeLayout>
</LinearLayout>