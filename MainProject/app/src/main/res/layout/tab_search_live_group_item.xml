<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_white"
                android:orientation="vertical">

    <View
        android:id="@+id/view"
        style="@style/grayHorizontallLine"/>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:layout_centerVertical="true"
        android:background="@color/bg_gray"
        android:padding="@dimen/woying_10_dip"
        >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/woying_4_dip"
            android:layout_toRightOf="@+id/tag_v"
            android:text="直播预告"
            android:textColor="@color/font_black"
            android:textSize="@dimen/woying_12_dip"
            />

        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/woying_10_dip"
            android:text="更多"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/woying_10_dip"
            />

    </RelativeLayout>


    <View
        style="@style/grayHorizontallLine"
        android:layout_below="@+id/relativeLayout"/>

</RelativeLayout>