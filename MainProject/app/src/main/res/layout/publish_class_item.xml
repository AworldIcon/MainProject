<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
<RelativeLayout
    android:id="@+id/back"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_white"
    android:paddingRight="@dimen/woying_5_dip"
    android:paddingLeft="@dimen/woying_5_dip"
    >
    <CheckBox
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/class_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1ban"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/woying_3_dip"
        android:textSize="@dimen/woying_12_dip"
        android:textColor="@color/font_black"
        android:layout_toRightOf="@+id/check"/>
    <TextView
        android:id="@+id/stu_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="20ren"
        android:textColor="@color/font_gray"
        android:textSize="@dimen/woying_12_dip"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/woying_1_dip"
        android:layout_alignParentBottom="true"
        android:background="@color/bg_gray"/>
</RelativeLayout>
</LinearLayout>