<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/hover_tab_ly"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:background="@color/bg_white"
        android:orientation="horizontal"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/comment_ly"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <TextView
                    android:id="@+id/com_tx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/gambit_pager_com_down"
                    android:gravity="center"
                    android:text="@string/input_comment_hint"
                    android:textColor="@color/first_theme"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/com_num_tx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dip"
                    android:gravity="center"
                    android:textColor="@color/first_theme"
                    android:textSize="16sp" />

            </LinearLayout>

            <View
                android:id="@+id/com_v"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/gray_line"></View>

        </RelativeLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/gray_line"></View>

        <RelativeLayout
            android:id="@+id/praise_ly"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <TextView
                    android:id="@+id/pra_tx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/gambit_pager_praise_up"
                    android:gravity="center"
                    android:text="@string/appraise"
                    android:textColor="@color/font_black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/pra_num_tx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dip"
                    android:gravity="center"
                    android:textColor="@color/font_black"
                    android:textSize="16sp" />

            </LinearLayout>

            <View
                android:id="@+id/pra_v"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/gray_line"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>