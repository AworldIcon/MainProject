<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/ripple_orange"
    android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/woying_4_dip"
    android:layout_marginBottom="@dimen/woying_4_dip"
    android:layout_marginLeft="@dimen/woying_8_dip"
    android:layout_marginRight="@dimen/woying_8_dip">
    <RelativeLayout
        android:id="@+id/image_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/notice_image"
            android:layout_width="@dimen/woying_40_dip"
            android:layout_height="@dimen/woying_40_dip"
            android:src="@drawable/notification_pink"
            android:layout_marginTop="@dimen/woying_4_dip"
            android:layout_centerVertical="true"
            />
        <View
            android:id="@+id/notify_view"
            android:layout_width="@dimen/woying_8_dip"
            android:layout_height="@dimen/woying_8_dip"
            android:gravity="center"
            android:background="@drawable/round_red_dian"
            android:layout_marginLeft="@dimen/woying_36_dip"
            android:layout_marginBottom="@dimen/woying_4_dip"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/woying_7_dip"
        android:layout_toRightOf="@+id/image_layout"
        android:layout_marginTop="@dimen/woying_4_dip"
        android:layout_centerVertical="true"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/woying_3_dip"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/notice_target"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[作业]"
                android:textColor="@color/font_gray"
                android:textSize="@dimen/woying_13_dip"/>
            <TextView
                android:id="@+id/notice_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="126346"
                android:textColor="@color/font_black"
                android:textSize="@dimen/woying_13_dip"/>
        </LinearLayout>

        <TextView
            android:id="@+id/receive_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12/46"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/woying_10_dip"/>

    </LinearLayout>
    <TextView
        android:id="@+id/notice_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/woying_5_dip"
        android:textColor="@color/font_gray"
        android:textSize="@dimen/woying_10_dip"
        android:text="20"

        />
</RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/woying_1_dip"
        android:background="@color/background_light_gray"/>
</LinearLayout>