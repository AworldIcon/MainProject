<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/first_launche_fragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/woying_50_dip">

        <ImageView
            android:id="@+id/launcher_yun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/launcher_yun"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/launcher4_mountain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/launcher4_mountain"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/launcher4_package"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/launcher4_package"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/launcher4_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/launcher4_chat"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/launcher4_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/launcher4_box"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bottom_ly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dip"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/launcher4_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/launcher4_text"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/launcher_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/launcher4_text"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/launcher_btn"
            android:visibility="invisible" />

    </LinearLayout>

</RelativeLayout>