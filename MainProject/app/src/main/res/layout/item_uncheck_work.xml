<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/woying_1_dip"
        android:background="@color/bg_gray"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/woying_16_dip"
        android:layout_marginRight="@dimen/woying_12_dip"
        android:layout_marginTop="@dimen/woying_3_dip"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_black"
                android:textSize="@dimen/woying_12_dip"
                android:layout_marginTop="@dimen/woying_3_dip"
                android:layout_marginRight="@dimen/woying_70_dip"
                android:layout_alignParentLeft="true"
                />
            <TextView
                android:id="@+id/score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_red"
                android:textSize="@dimen/woying_12_dip"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/woying_4_dip"
                android:layout_marginTop="@dimen/woying_3_dip"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/choices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font_black"
            android:textSize="@dimen/woying_12_dip"
            android:layout_marginTop="@dimen/woying_3_dip"
            android:visibility="gone"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/four_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/woying_3_dip"
        android:layout_marginLeft="@dimen/woying_16_dip"
        android:layout_marginRight="@dimen/woying_12_dip"
        android:visibility="visible">
        <LinearLayout
            android:id="@+id/answer_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/woying_5_dip"
            android:layout_marginBottom="@dimen/woying_5_dip">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的答案: "
                android:textColor="@color/font_gray"
                android:textSize="@dimen/woying_12_dip"
                />
            <TextView
                android:id="@+id/result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_gray"
                android:textSize="@dimen/woying_12_dip"
                android:layout_marginLeft="@dimen/woying_5_dip"
                android:layout_marginRight="@dimen/woying_25_dip"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/true_answer_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/woying_5_dip"
            android:layout_marginBottom="@dimen/woying_5_dip">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正确答案: "
                android:textColor="@color/font_black"
                android:textSize="@dimen/woying_12_dip"
                />
            <TextView
                android:id="@+id/true_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_green"
                android:textSize="@dimen/woying_12_dip"
                android:layout_marginLeft="@dimen/woying_5_dip"
                android:layout_marginRight="@dimen/woying_25_dip"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>