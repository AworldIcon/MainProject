<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/item_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/woying_80_dip"
        android:layout_marginLeft="1dp"
        android:background="@drawable/ripple_orange"
        android:gravity="center">
        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/woying_30_dip"
            android:layout_height="@dimen/woying_30_dip"
            android:layout_marginTop="@dimen/woying_8_dip"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:singleLine="true"
            android:maxLength="6"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/woying_3_dip"
            android:layout_marginBottom="@dimen/woying_8_dip"
            android:layout_below="@+id/image"
            style="@style/font_normal"/>
    </RelativeLayout>
    <View
        android:id="@+id/fenge_view"
        android:layout_below="@+id/item_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/woying_10_dip"
        android:visibility="gone"
        android:background="@color/bg_gray"/>
</RelativeLayout>