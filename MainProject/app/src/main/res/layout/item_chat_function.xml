<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ripple_orange"
                android:orientation="vertical">

    <View
        android:id="@+id/grayLine"
        style="@style/grayHorizontallLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/woying_10_dip"/>

    <TextView
        android:id="@+id/typeName"
        style="@style/font_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/grayLine"
        android:background="@color/bg_white"
        android:padding="@dimen/woying_10_dip"
        android:text="作业"/>

    <TextView
        android:id="@+id/status"
        style="@style/font_gray_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/grayLine"
        android:layout_toRightOf="@+id/typeName"
        android:background="@color/bg_white"
        android:gravity="right"
        android:padding="@dimen/woying_10_dip"
        android:text="作业"/>

    <View
        android:id="@+id/grayLine2"
        style="@style/grayHorizontallLine"
        android:layout_below="@+id/typeName"
        android:layout_marginLeft="@dimen/woying_10_dip"
        android:layout_marginRight="@dimen/woying_10_dip"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/woying_40_dip"
        android:layout_height="@dimen/woying_40_dip"
        android:layout_below="@+id/grayLine2"
        android:layout_margin="@dimen/woying_10_dip"
        android:background="@color/card_huang"
        />


    <TextView
        android:id="@+id/name"
        style="@style/font_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/imageView"
        android:layout_marginTop="@dimen/woying_2_dip"
        android:layout_toEndOf="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:background="@color/bg_white"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="作业"/>


    <TextView
        android:id="@+id/bottomTextView"
        style="@style/font_gray_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imageView"
        android:layout_marginBottom="@dimen/woying_2_dip"
        android:layout_marginRight="@dimen/woying_10_dip"
        android:layout_toEndOf="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:background="@color/bg_white"
        android:gravity="right"
        android:text="作业"/>

    <TextView
        android:id="@+id/bottomTextView2"
        style="@style/font_gray_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/bottomTextView"
        android:layout_marginRight="@dimen/woying_10_dip"
        android:layout_toEndOf="@+id/bottomTextView"
        android:layout_toRightOf="@+id/bottomTextView"
        android:background="@color/bg_white"
        android:gravity="right"
        android:text="作业"/>


    <TextView
        android:id="@+id/bottomTextView3"
        style="@style/font_gray_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/bottomTextView2"
        android:layout_marginRight="@dimen/woying_10_dip"
        android:layout_toEndOf="@+id/bottomTextView2"
        android:layout_toRightOf="@+id/bottomTextView2"
        android:background="@color/bg_white"
        android:gravity="right"
        android:text="作业"/>

    <View
        style="@style/grayHorizontallLine"
        android:layout_below="@+id/imageView"/>


</RelativeLayout>