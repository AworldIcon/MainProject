<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/ripple_orange"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/woying_6_dip"
        android:background="@color/bg_gray"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/left_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/woying_12_dip"
            android:layout_marginTop="@dimen/woying_12_dip"
            android:layout_marginBottom="@dimen/woying_8_dip"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            >
            <ImageView
                android:id="@+id/head_Img"
                android:layout_width="@dimen/woying_50_dip"
                android:layout_height="@dimen/woying_50_dip"
                android:layout_centerVertical="true"
                android:src="@drawable/default_me_myimg" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/woying_50_dip"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/woying_10_dip">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/finish_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/woying_14_dip"
                        android:textColor="@color/font_black"
                        android:text="demo"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/woying_3_dip"
                        android:text="得分: "
                        android:textColor="@color/font_gray"
                        android:layout_marginLeft="@dimen/woying_5_dip"
                        android:textSize="@dimen/woying_12_dip"
                        />
                    <TextView
                        android:id="@+id/score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/woying_12_dip"
                        android:textColor="@color/font_red"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/woying_5_dip"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/woying_12_dip"
                        android:textColor="@color/font_gray"
                        android:text="提交时间 : "
                        />
                    <TextView
                        android:id="@+id/finish_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/woying_12_dip"
                        android:layout_marginLeft="@dimen/woying_3_dip"
                        android:textColor="@color/font_gray"
                        android:text="15466"
                        />
                    <TextView
                        android:id="@+id/status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/woying_8_dip"
                        android:textSize="@dimen/woying_12_dip"
                        android:padding="@dimen/woying_3_dip"
                        android:textColor="@color/font_gray"
                        />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:id="@+id/right_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/department_go"
            android:layout_marginRight="@dimen/woying_5_dip"
            />
    </RelativeLayout>

</LinearLayout>