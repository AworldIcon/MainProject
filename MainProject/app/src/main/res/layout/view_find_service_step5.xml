<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/commitLy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/font_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/woying_4_dip"
            android:drawableRight="@drawable/red_star"
            android:padding="@dimen/woying_10_dip"
            android:text="@string/username"/>

        <EditText
            android:id="@+id/userNameEdit"
            style="@style/font_normal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/woying_30_dip"
            android:layout_marginLeft="@dimen/woying_10_dip"
            android:layout_marginRight="@dimen/woying_10_dip"
            android:background="@drawable/round_gray1"
            android:hint="请填写你的真实姓名"
            android:padding="4dp"
            android:text=""/>

        <TextView
            style="@style/font_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/woying_10_dip"
            android:drawablePadding="@dimen/woying_4_dip"
            android:drawableRight="@drawable/red_star"
            android:padding="@dimen/woying_10_dip"
            android:text="@string/card_id"/>

        <EditText
            android:id="@+id/cardEdit"
            style="@style/font_normal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/woying_30_dip"
            android:layout_marginLeft="@dimen/woying_10_dip"
            android:layout_marginRight="@dimen/woying_10_dip"
            android:background="@drawable/round_gray1"
            android:hint="请输入身份证号"
            android:padding="4dp"/>

        <TextView
            style="@style/font_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/woying_10_dip"
            android:drawablePadding="@dimen/woying_4_dip"
            android:drawableRight="@drawable/red_star"
            android:padding="@dimen/woying_10_dip"
            android:text="@string/credentials_photo"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/woying_10_dip"
            android:layout_marginRight="@dimen/woying_10_dip"
            android:background="@drawable/round_gray"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/photo"
                android:layout_width="@dimen/woying_40_dip"
                android:layout_height="@dimen/woying_40_dip"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/woying_10_dip"
                android:background="@color/bg_gray"
                android:src="@drawable/add_work"/>

            <ImageView
                android:id="@+id/delete"
                android:layout_width="@dimen/woying_14_dip"
                android:layout_height="@dimen/woying_14_dip"
                android:layout_alignRight="@+id/photo"
                android:layout_marginRight="-4dp"
                android:layout_marginTop="4dp"
                android:visibility="gone"
                android:src="@drawable/dele_photo"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/woying_10_dip"
                android:layout_toRightOf="@id/photo"
                android:layout_centerVertical="true"
                android:text="@string/service_picture_remark"
                android:textColor="@color/font_red2"/>

        </RelativeLayout>

        <TextView
            style="@style/font_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/woying_10_dip"
            android:drawablePadding="@dimen/woying_4_dip"
            android:drawableRight="@drawable/red_star"
            android:padding="@dimen/woying_10_dip"
            android:text="@string/page_book"/>

        <TextView
            style="@style/font_gray_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/woying_10_dip"
            android:paddingRight="@dimen/woying_10_dip"
            android:text="@string/page_book_intorduce"/>

        <TextView
            android:id="@+id/needPage"
            style="@style/font_normal_small"
            android:layout_width="match_parent"
            android:layout_height="@dimen/woying_30_dip"
            android:layout_margin="@dimen/woying_10_dip"
            android:background="@drawable/round_gray1"
            android:drawableRight="@drawable/department_down"
            android:gravity="center_vertical"
            android:hint="@string/need_unneed"
            android:paddingLeft="@dimen/woying_10_dip"
            android:paddingRight="@dimen/woying_10_dip"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/resultLy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">


        <ImageView
            android:id="@+id/statusImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/woying_10_dip"
            android:layout_marginTop="@dimen/woying_20_dip"
            android:src="@drawable/service_status_passed"
            />

        <TextView
            android:id="@+id/introduce"
            style="@style/font_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/woying_10_dip"
            android:text="结业申请通过"/>

        <ImageView
            android:id="@+id/resultImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/woying_10_dip"
            android:layout_marginTop="@dimen/woying_20_dip"
            android:visibility="gone"
            />
    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/woying_40_dip"
        android:layout_marginLeft="@dimen/woying_15_dip"
        android:layout_marginRight="@dimen/woying_15_dip"
        android:layout_marginTop="@dimen/woying_10_dip"
        android:background="@drawable/round_huang3_loginsetting"
        android:enabled="true"
        android:text="@string/submit"
        android:textColor="@color/white"
        android:textSize="@dimen/woying_16_dip"
        android:visibility="gone"/>
</LinearLayout>