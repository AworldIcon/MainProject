<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/class_topic_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_gray">

    <LinearLayout
        android:id="@+id/topic_head_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/woying_10_dip"
            android:layout_marginLeft="@dimen/woying_10_dip"
            android:layout_marginBottom="@dimen/woying_10_dip"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:src="@drawable/iv_class_top" />

        <ImageView
            android:id="@+id/iv_refined"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/woying_10_dip"
            android:layout_marginTop="@dimen/woying_10_dip"
            android:layout_marginLeft="@dimen/woying_10_dip"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:src="@drawable/elite_question_image" />

        <TextView
            android:id="@+id/class_topic_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/font_black"
            android:layout_margin="@dimen/woying_10_dip"
            android:text="世界那么大，我想去看看" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/top_image_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/woying_80_dip"
        android:layout_below="@+id/topic_head_layout"
        android:background="@color/bg_white"
        android:visibility="gone"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/topic_one_image"
            android:layout_width="@dimen/woying_95_dip"
            android:layout_height="@dimen/woying_80_dip"
            android:layout_marginLeft="@dimen/woying_10_dip"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/topic_two_image"
            android:layout_width="@dimen/woying_95_dip"
            android:layout_height="@dimen/woying_80_dip"
            android:layout_marginLeft="@dimen/woying_7_dip"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/topic_three_image"
            android:layout_width="@dimen/woying_95_dip"
            android:layout_height="@dimen/woying_80_dip"
            android:layout_marginLeft="@dimen/woying_7_dip"
            android:scaleType="centerCrop" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/topic_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_image_layout"
        android:background="@color/bg_white">

        <ImageView
            android:id="@+id/iv_head_image"
            android:layout_width="@dimen/woying_20_dip"
            android:layout_height="@dimen/woying_20_dip"
            android:layout_margin="@dimen/woying_10_dip" />

        <TextView
            android:id="@+id/tv_bottom_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_head_image"
            android:text="黑客游侠"
            android:textColor="@color/oder_state_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/woying_10_dip"
            android:layout_toRightOf="@+id/tv_bottom_name"
            android:text="3分钟前"
            android:textColor="@color/oder_state_color"
            android:textSize="12sp" />

        <RelativeLayout
            android:id="@+id/praise_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/reply_layout">

            <ImageView
                android:id="@+id/iv_praise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/iv_external_topic_praise" />

            <TextView
                android:id="@+id/tv_praise_sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/woying_5_dip"
                android:layout_toRightOf="@+id/iv_praise"
                android:text="23"
                android:textColor="@color/oder_state_color" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/reply_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/woying_10_dip"
            android:layout_marginRight="@dimen/woying_10_dip">

            <ImageView
                android:id="@+id/iv_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/iv_external_topic_message" />

            <TextView
                android:id="@+id/tv_reply_sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/woying_5_dip"
                android:layout_toRightOf="@+id/iv_reply"
                android:text="23"
                android:textColor="@color/oder_state_color" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
