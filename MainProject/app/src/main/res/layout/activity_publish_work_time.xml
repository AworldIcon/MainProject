<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_publish_work_time"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    tools:context="com.coder.kzxt.buildwork.activity.PublishWorkTimeActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme="@style/Theme.AppCompat.Light.DarkActionBar"
        app:theme="@style/Toolbar"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        >
        <TextView
            android:id="@+id/toolbar_title"
            android:text="forever"
            android:textSize="@dimen/woying_14_dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textColor="@color/font_white"
            android:singleLine="true" />

    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:id="@+id/all_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_below="@+id/toolbar">
        <RelativeLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/woying_5_dip"
            android:layout_marginLeft="@dimen/woying_5_dip"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_gray"
                android:textSize="@dimen/woying_12_dip"
                android:text="选择发放对象"/>
            <TextView
                android:id="@+id/select_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_blue"
                android:textSize="@dimen/woying_12_dip"
                android:layout_alignParentRight="true"
                android:text="全选"/>
        </RelativeLayout>
        <ListView
            android:id="@+id/select_class"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:divider="#00000000"
            android:dividerHeight="0dip"
            android:listSelector="@android:color/transparent"
            android:layout_below="@+id/layout"/>
        <LinearLayout
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/select_class"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/select_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/woying_5_dip"
                    android:padding="@dimen/woying_5_dip">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="有效时段"/>
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/start_time"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/woying_50_dip"
                    android:background="@color/bg_white">
                    <TextView
                        android:id="@+id/se"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/start_time"
                        android:textColor="@color/font_black"
                        android:textSize="@dimen/woying_14_dip"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/woying_10_dip"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:visibility="visible"
                        android:layout_centerVertical="true"
                        android:textColor="@color/font_black"
                        android:layout_toRightOf="@+id/se"/>
                    <TextView
                        android:id="@+id/t1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/woying_14_dip"
                        android:textColor="@color/font_black"
                        android:layout_marginLeft="@dimen/woying_4_dip"
                        android:layout_toRightOf="@+id/se"
                        android:layout_centerVertical="true"
                        />
                    <ImageView
                        android:id="@+id/start_jiantou"
                        android:layout_width="@dimen/woying_14_dip"
                        android:layout_height="@dimen/woying_14_dip"
                        android:src="@drawable/department_go"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:visibility="invisible"
                        android:layout_marginRight="@dimen/woying_10_dip"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/end_time"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/woying_50_dip"
                    android:layout_marginTop="@dimen/woying_1_dip"
                    android:background="@color/bg_white">
                    <TextView
                        android:id="@+id/st"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/end_time"
                        android:textColor="@color/font_black"
                        android:textSize="@dimen/woying_14_dip"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/woying_10_dip"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:visibility="visible"
                        android:layout_centerVertical="true"
                        android:textColor="@color/font_black"
                        android:layout_toRightOf="@+id/st"/>
                    <TextView
                        android:id="@+id/t2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/woying_14_dip"
                        android:textColor="@color/font_black"
                        android:layout_toRightOf="@+id/st"
                        android:layout_marginLeft="@dimen/woying_4_dip"
                        android:layout_centerVertical="true"
                        />
                    <ImageView
                        android:id="@+id/end_jiantou"
                        android:layout_width="@dimen/woying_14_dip"
                        android:layout_height="@dimen/woying_14_dip"
                        android:src="@drawable/department_go"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/woying_10_dip"
                        android:visibility="gone"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/limt_time"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/woying_50_dip"
                    android:layout_marginTop="@dimen/woying_1_dip"
                    android:background="@color/bg_white"
                    android:visibility="gone"
                    >
                    <TextView
                        android:id="@+id/limitTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/woying_14_dip"
                        android:layout_centerVertical="true"
                        android:textColor="@color/font_black"
                        android:layout_marginLeft="@dimen/woying_10_dip"
                        android:text="考试限时:60分钟"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/department_go"
                        android:layout_marginRight="@dimen/woying_10_dip"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
                <Button
                    android:id="@+id/publish"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/woying_40_dip"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/woying_20_dip"
                    android:layout_marginRight="@dimen/woying_20_dip"
                    android:text="@string/fabu"
                    android:textColor="@color/font_white"
                    android:background="@drawable/round_theme"
                    android:layout_marginBottom="@dimen/woying_10_dip"
                    android:layout_marginTop="@dimen/woying_30_dip"
                    />
            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

    <include layout="@layout/loading" />
    <include layout="@layout/empty_view" />
    <include layout="@layout/load_fail" />

</RelativeLayout>
