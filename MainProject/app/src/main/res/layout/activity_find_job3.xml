<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_white"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:navigationIcon="@drawable/back_up"
        app:popupTheme="@style/Theme.AppCompat.Light.DarkActionBar"
        app:theme="@style/Toolbar"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/statusImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/woying_20_dip"
            android:src="@drawable/service_status_passed"
            />

        <TextView
            android:id="@+id/introduce"
            style="@style/font_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/woying_10_dip"
            android:text="就业登记审核通过"/>

        <Button
            android:id="@+id/button"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/woying_40_dip"
            android:layout_margin="@dimen/woying_20_dip"
            android:background="@drawable/round_huang3_loginsetting"
            android:text="填写就业登记表"
            android:textColor="@color/white"
            android:textSize="@dimen/woying_16_dip"
            android:visibility="gone"/>
    </LinearLayout>

</LinearLayout>