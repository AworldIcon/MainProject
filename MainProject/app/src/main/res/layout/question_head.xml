<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/ripple_orange"
    >
    <LinearLayout
        android:id="@+id/po"
        android:layout_width="match_parent"
        android:layout_height="@dimen/woying_30_dip"
        android:background="@color/bg_gray"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font_black"
            android:textSize="@dimen/woying_12_dip"
            android:layout_marginLeft="@dimen/woying_16_dip"
            android:text="题量:  "/>
        <TextView
            android:id="@+id/number_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font_black"
            android:textSize="@dimen/woying_12_dip"
            android:text=""/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font_black"
            android:textSize="@dimen/woying_12_dip"
            android:layout_marginLeft="@dimen/woying_5_dip"
            android:text="总分:  "/>
        <TextView
            android:id="@+id/full_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font_red"
            android:textSize="@dimen/woying_12_dip"
            android:text=""/>

    </LinearLayout>
    <View
        android:id="@+id/po1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/woying_6_dip"
        android:background="@color/bg_gray"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/woying_16_dip"
        android:layout_marginRight="@dimen/woying_14_dip"
        >
        <TextView
            android:id="@+id/headtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/woying_4_dip"
            android:layout_marginBottom="@dimen/woying_4_dip"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/woying_4_dip"
            android:layout_marginBottom="@dimen/woying_4_dip"
            >
            <TextView
                android:id="@+id/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_black"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_black"
                android:layout_marginLeft="@dimen/woying_5_dip"
                android:text="共: "/>
            <TextView
                android:id="@+id/score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_red"
                />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/woying_1_dip"
        android:background="@color/bg_gray"
        />
</LinearLayout>