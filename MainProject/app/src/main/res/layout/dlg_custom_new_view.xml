<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/woying_250_dip"
        android:layout_height="wrap_content"
        android:background="@drawable/round_white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/woying_36_dip"
            android:background="@drawable/round_main_top"
            android:gravity="center"
            android:text="@string/dialog_default_title"
            android:textColor="@color/white"
            android:textSize="@dimen/woying_14_dip"
            android:visibility="gone" />


        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:minHeight="@dimen/woying_90_dip"
            android:padding="@dimen/woying_20_dip"
            android:textColor="@color/font_black"
            android:textSize="@dimen/woying_14_dip" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray_line" />

        <LinearLayout
            android:id="@+id/bottomLy"
            android:layout_width="match_parent"
            android:layout_height="@dimen/woying_36_dip"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/leftTextView"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/cancel"
                android:textColor="@color/first_theme"
                android:textSize="@dimen/woying_14_dip" />

            <View
                android:id="@+id/grayLine"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/gray_line" />

            <TextView
                android:id="@+id/rightTextView"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/btn_sure"
                android:textColor="@color/first_theme"
                android:textSize="@dimen/woying_14_dip" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>