<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/ripple_orange"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/woying_6_dip"
        android:background="@color/bg_gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/woying_10_dip"
        android:layout_marginTop="@dimen/woying_12_dip"
        android:layout_marginBottom="@dimen/woying_8_dip"
        android:layout_marginRight="@dimen/woying_10_dip"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/stu_picture"
            android:layout_width="@dimen/woying_50_dip"
            android:layout_height="@dimen/woying_50_dip"
            android:src="@drawable/default_me_myimg"
            android:layout_gravity="center_vertical"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/woying_5_dip"
            >
            <TextView
                android:id="@+id/stu_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_black"
                android:textSize="@dimen/woying_14_dip"
                android:layout_gravity="center_vertical"
                android:text="1234156"
                />
            <TextView
                android:id="@+id/class_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_gray"
                android:textSize="@dimen/woying_12_dip"
                android:layout_gravity="center_vertical"
                android:layout_alignParentBottom="true"
                android:text="1564987"
                />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>