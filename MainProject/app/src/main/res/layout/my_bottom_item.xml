<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_bottom_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/woying_40_dip"
    android:background="@drawable/ripple_orange">

    <ImageView
        android:id="@+id/iv_bottom_item"
        android:layout_width="@dimen/woying_15_dip"
        android:layout_height="@dimen/woying_15_dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/woying_14_dip"
        android:src="@drawable/iv_teaching_course"
        />

    <TextView
        android:id="@+id/tv_bottom_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/woying_10_dip"
        android:layout_toRightOf="@+id/iv_bottom_item"
         />

    <ImageView
        android:id="@+id/iv_jiantou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/woying_20_dip"
        android:src="@drawable/sliding_jiantou" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/tv_bottom_item"
        android:background="@color/bg_gray"/>
</RelativeLayout>