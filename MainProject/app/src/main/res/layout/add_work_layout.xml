<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    >
    <LinearLayout
        android:layout_width="@dimen/woying_300_dip"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/woying_10_dip"
        >
        <com.coder.kzxt.buildwork.views.ContainsEmojiEditText
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/woying_120_dip"
            android:background="@drawable/round_gray1"
            android:textColor="@color/font_black"
            android:textSize="@dimen/woying_13_dip"
            android:maxLength="20"
            android:gravity="top"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/woying_1_dip"
        android:background="@color/bg_gray"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/woying_50_dip"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/btn_false"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="取消"
                android:layout_centerInParent="true"
                android:textColor="@color/font_red"
                android:gravity="center"
                />
        </RelativeLayout>
        <View
            android:layout_width="@dimen/woying_1_dip"
            android:layout_height="@dimen/woying_50_dip"
            android:background="@color/bg_gray"
            />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/btn_sure"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="确定"
                android:textColor="@color/bg_blue"
                android:gravity="center"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>