<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_social_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    tools:context="com.coder.kzxt.login.activity.SocialAccountActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:navigationIcon="@drawable/back_up"
        app:popupTheme="@style/Theme.AppCompat.Light.DarkActionBar"
        app:theme="@style/Toolbar"
        app:titleTextAppearance="@style/Toolbar.TitleText"
       />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:id="@+id/weixin_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/woying_3_dip"
            android:layout_marginBottom="@dimen/woying_3_dip"
            android:layout_marginRight="@dimen/woying_5_dip"
            android:layout_marginLeft="@dimen/woying_5_dip">
            <ImageView
                android:id="@+id/weixin_image"
                android:layout_width="@dimen/woying_40_dip"
                android:layout_height="@dimen/woying_40_dip"
                android:src="@drawable/weixin_icon"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/bind_weixin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/woying_12_dip"
                android:layout_marginRight="@dimen/woying_25_dip"
                android:layout_centerVertical="true"
                android:textColor="@color/font_gray"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/sliding_jiantou"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/woying_1_dip"
            android:background="@color/bg_dark_gray"
            />
        <RelativeLayout
            android:id="@+id/qq_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/woying_5_dip"
            android:layout_marginLeft="@dimen/woying_5_dip"
            android:layout_marginTop="@dimen/woying_3_dip"
            android:layout_marginBottom="@dimen/woying_3_dip">
            <ImageView
                android:id="@+id/qq_image"
                android:layout_width="@dimen/woying_40_dip"
                android:layout_height="@dimen/woying_40_dip"
                android:src="@drawable/qq_icon"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/bind_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/woying_12_dip"
                android:layout_marginRight="@dimen/woying_25_dip"
                android:layout_centerVertical="true"
                android:textColor="@color/font_gray"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/sliding_jiantou"/>
        </RelativeLayout>
    </LinearLayout>
    <include layout="@layout/loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</RelativeLayout>
