<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_top_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/woying_10_dip"
    android:background="@drawable/ripple_orange"
    android:gravity="center_horizontal">

   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:padding="@dimen/woying_5_dip"
       >
     <ImageView
        android:id="@+id/iv_top"
        android:layout_width="@dimen/woying_24_dip"
        android:layout_height="@dimen/woying_24_dip"
        android:src="@drawable/my_iv_exam"
        />

    <TextView
        android:id="@+id/tv_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/exame_manage"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/iv_top"
        />

   </RelativeLayout>
</RelativeLayout>

