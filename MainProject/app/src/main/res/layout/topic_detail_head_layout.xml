<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_white">

    <RelativeLayout
        android:id="@+id/detail_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white"
        android:padding="@dimen/woying_10_dip">

        <ImageView
            android:id="@+id/iv_detail_head"
            android:layout_width="@dimen/woying_35_dip"
            android:layout_height="@dimen/woying_35_dip"
            android:src="@drawable/default_common_header" />

        <TextView
            android:id="@+id/tv_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_detail_head"
            android:layout_marginLeft="@dimen/woying_10_dip"
            android:layout_toRightOf="@+id/iv_detail_head"
            android:text="哈哈哈哈"
            android:textColor="@color/bg_black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_detail_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_detail_head"
            android:layout_marginLeft="@dimen/woying_10_dip"
            android:layout_toRightOf="@+id/iv_detail_head"
            android:text="1分钟前"
            android:textColor="@color/oder_state_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_detail_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_detail_head"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/woying_10_dip"
            android:text="@string/delete"
            android:textColor="@color/oder_state_color"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/detail_middle_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detail_top_layout"
        android:background="@color/bg_white">

        <TextView
            android:id="@+id/tv_middle_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/woying_10_dip"
            android:layout_marginRight="@dimen/woying_10_dip"
            android:text="我是内容标题来来来来来来"
            android:textColor="@color/font_black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_middle_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_middle_title"
            android:layout_margin="@dimen/woying_10_dip"
            android:text="哈哈哈哈哈哈哈哈哈哈哈哈"
            android:textColor="@color/oder_user_color"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/top_image_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_middle_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/topic_one_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/woying_150_dip"
                android:layout_marginLeft="@dimen/woying_2_dip"
                android:layout_marginRight="@dimen/woying_2_dip"
                android:scaleType="centerCrop"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/topic_two_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/woying_150_dip"
                android:layout_margin="@dimen/woying_2_dip"
                android:scaleType="centerCrop"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/topic_three_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/woying_150_dip"
                android:layout_marginLeft="@dimen/woying_2_dip"
                android:layout_marginRight="@dimen/woying_2_dip"
                android:scaleType="centerCrop"
                android:visibility="gone" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/content_bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top_image_layout"
            android:background="@color/bg_white"
            android:padding="@dimen/woying_10_dip">

            <ImageView
                android:id="@+id/iv_topic_zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/tv_topic_zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/woying_5_dip"
                android:layout_toRightOf="@+id/iv_topic_zan"
                android:text="999人赞过"
                android:textColor="@color/oder_state_color"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/iv_topic_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/woying_20_dip"
                android:layout_toRightOf="@+id/tv_topic_zan" />

            <TextView
                android:id="@+id/tv_topic_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/woying_5_dip"
                android:layout_toRightOf="@+id/iv_topic_collect"
                android:text="89人收藏"
                android:textColor="@color/oder_state_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_detail_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/woying_10_dip"
                android:text="89人回复"
                android:textColor="@color/oder_state_color"
                android:textSize="12sp" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/reply_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detail_middle_layout"
        android:background="@color/bg_set_color">

        <TextView
            android:id="@+id/tv_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/woying_10_dip"
            android:text="全部回复"
            android:textColor="@color/oder_user_color"
            android:textSize="16sp" />
    </RelativeLayout>

</RelativeLayout>
