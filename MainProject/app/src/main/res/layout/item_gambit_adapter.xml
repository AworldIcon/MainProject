<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_orange">

    <RelativeLayout
        android:id="@+id/zong_ly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/woying_6_dip">

        <ImageView
            android:id="@+id/user_head_img"
            android:layout_width="@dimen/woying_35_dip"
            android:layout_height="@dimen/woying_35_dip"
            android:layout_marginLeft="@dimen/woying_10_dip"
            android:layout_marginTop="@dimen/woying_6_dip"
            android:src="@drawable/default_me_myimg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/user_head_img"
            android:layout_marginLeft="@dimen/woying_10_dip"
            android:layout_marginRight="@dimen/woying_10_dip"
            android:layout_marginTop="@dimen/woying_14_dip"
            android:layout_toRightOf="@+id/user_head_img"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/user_name_tx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/woying_4_dip"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:textColor="@color/font_gray"
                    android:textSize="@dimen/woying_14_dip" />

                <TextView
                    android:id="@+id/praise_status_tx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawableLeft="@drawable/gambit_praise_up"
                    android:gravity="left|center"
                    android:maxLength="4"
                    android:textColor="@color/font_gray"
                    android:textSize="@dimen/woying_10_dip" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/woying_10_dip">

                <TextView
                    android:id="@+id/is_top_tx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/round_blue_solid"
                    android:gravity="center"
                    android:paddingBottom="@dimen/woying_1_dip"
                    android:paddingLeft="@dimen/woying_4_dip"
                    android:paddingRight="@dimen/woying_4_dip"
                    android:paddingTop="@dimen/woying_1_dip"
                    android:text="@string/make_top"
                    android:textColor="@color/font_blue"
                    android:textSize="@dimen/woying_10_dip" />

                <TextView
                    android:id="@+id/content_tx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/woying_2_dip"
                    android:singleLine="true"
                    android:textColor="@color/font_black"
                    android:textSize="@dimen/woying_14_dip" />

            </LinearLayout>

            <TextView
                android:id="@+id/gambit_content_tx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/woying_2_dip"
                android:layout_marginTop="@dimen/woying_4_dip"
                android:textColor="@color/font_black"
                android:textSize="@dimen/woying_14_dip"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/single_img_iv"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/woying_140_dip"
                android:layout_marginTop="@dimen/woying_4_dip"
                android:adjustViewBounds="true"
                android:minWidth="@dimen/woying_140_dip"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:id="@+id/imgs_ly"
                android:layout_width="match_parent"
                android:layout_height="@dimen/woying_80_dip"
                android:layout_marginRight="@dimen/woying_12_dip"
                android:layout_marginTop="@dimen/woying_4_dip"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/one_img_iv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/woying_4_dip"
                    android:layout_weight="1"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/two_img_iv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/woying_4_dip"
                    android:layout_marginTop="@dimen/woying_4_dip"
                    android:layout_weight="1"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/tr_img_iv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/woying_4_dip"
                    android:layout_marginTop="@dimen/woying_4_dip"
                    android:layout_weight="1"
                    android:scaleType="centerCrop" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/voice_ly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/woying_6_dip">

                <RelativeLayout
                    android:id="@+id/voice_bj_layout"
                    android:layout_width="@dimen/woying_80_dip"
                    android:layout_height="@dimen/woying_30_dip"
                    android:background="@drawable/chat_other_bj">

                    <ImageView
                        android:id="@+id/voice_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/woying_10_dip"
                        android:src="@drawable/play_voice_false" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/voice_time_tx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/woying_4_dip"
                    android:layout_toRightOf="@+id/voice_bj_layout"
                    android:textColor="@color/font_gray"
                    android:textSize="@dimen/woying_12_dip" />

                <ProgressBar
                    android:id="@+id/voice_progress_header"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/woying_4_dip"
                    android:layout_toRightOf="@+id/voice_time_tx"
                    android:indeterminateTint="@color/first_theme"
                    android:indeterminateTintMode="src_atop"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/woying_6_dip"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/time_tx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/font_gray"
                    android:textSize="@dimen/woying_10_dip"

                    />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
