<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_horizontal"
              android:orientation="vertical">



    <ImageView
        android:id="@+id/statusImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/woying_20_dip"
        android:src="@drawable/service_status_passed"
        />

    <TextView
        android:id="@+id/introduce"
        style="@style/font_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="技术面试通过"
        android:paddingTop="@dimen/woying_10_dip"/>

    <TextView
        android:id="@+id/comment"
        style="@style/font_gray_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/woying_4_dip"
        android:paddingLeft="@dimen/woying_10_dip"
        android:paddingRight="@dimen/woying_10_dip"/>


    <Button
        android:id="@+id/button"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/woying_40_dip"
        android:layout_margin="@dimen/woying_20_dip"
        android:background="@drawable/round_huang3_loginsetting"
        android:text="预约技术面试"
        android:textColor="@color/white"
        android:textSize="@dimen/font_big"
        android:visibility="visible"/>

</LinearLayout>