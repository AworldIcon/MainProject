<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/bg_gray"
    android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/woying_35_dip"
            android:layout_marginRight="@dimen/woying_10_dip"
            android:layout_marginTop="@dimen/woying_4_dip"
            android:layout_marginBottom="@dimen/woying_4_dip">
            <CheckBox
                android:id="@+id/choice_image"
                android:layout_width="@dimen/woying_18_dip"
                android:layout_height="@dimen/woying_18_dip"
                android:button="@null"
                android:gravity="center_vertical"
                android:background="@drawable/select_detemin"/>
            <TextView
                android:id="@+id/class_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/choice_image"
                android:layout_marginLeft="@dimen/woying_5_dip"
                android:text="123456"
                android:textSize="@dimen/woying_14_dip"
                android:textColor="@color/font_black"
                android:layout_centerVertical="true"
                android:gravity="center"/>
            <TextView
                android:id="@+id/stu_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/font_gray"
                android:textSize="@dimen/woying_12_dip"
                android:text="12ren"
                android:visibility="visible"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
    <View
        android:id="@+id/bottom_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/woying_1_dip"
        android:layout_marginLeft="@dimen/woying_35_dip"
        android:layout_marginRight="@dimen/woying_10_dip"
        android:background="@color/background_dark_gray"
        />
</LinearLayout>