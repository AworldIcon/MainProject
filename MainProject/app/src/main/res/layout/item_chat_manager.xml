<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_white"
                android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/woying_40_dip"
        android:layout_height="@dimen/woying_40_dip"
        android:layout_margin="@dimen/woying_10_dip"
        />


    <TextView
        android:id="@+id/name"
        style="@style/font_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/imageView"
        android:layout_marginTop="@dimen/woying_2_dip"
        android:layout_toEndOf="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:background="@color/bg_white"
        android:ellipsize="end"
        android:maxLines="1"
        android:text=""/>


    <TextView
        android:id="@+id/role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/name"
        android:layout_marginLeft="@dimen/woying_10_dip"
        android:layout_toEndOf="@+id/name"
        android:layout_toRightOf="@+id/name"
        android:background="@drawable/rectangle_red"
        android:ellipsize="end"
        android:maxLines="1"
        android:padding="2dp"
        android:textColor="@color/font_red"
        android:textSize="@dimen/font_mini"/>

    <TextView
        android:id="@+id/phone"
        style="@style/font_gray_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imageView"
        android:layout_marginBottom="@dimen/woying_2_dip"
        android:layout_marginRight="@dimen/woying_10_dip"
        android:layout_toEndOf="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:background="@color/bg_white"
        android:gravity="right"
        android:text=""/>

    <ImageView
        android:id="@+id/no_disturb"
        style="@style/font_gray_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imageView"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/woying_2_dip"
        android:layout_marginRight="@dimen/woying_10_dip"
        android:src="@drawable/no_disturb"
        android:visibility="gone"
        />


</RelativeLayout>