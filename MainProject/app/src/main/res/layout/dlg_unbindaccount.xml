<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:gravity="center">
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/woying_30_dip"
        android:layout_marginRight="@dimen/woying_30_dip"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/unbind_league"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yun_league"
            android:layout_marginTop="@dimen/woying_15_dip"
            android:textSize="@dimen/woying_14_dip"
            android:textColor="@color/font_black"/>
        <LinearLayout
            android:id="@+id/yun_account_ll"
            android:layout_below="@id/yun_league"
            android:layout_marginTop="@dimen/woying_15_dip"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/woying_15_dip"
            android:layout_marginRight="@dimen/woying_15_dip"
            android:layout_height="@dimen/woying_50_dip"
            android:orientation="horizontal"
            android:background="@drawable/edit_not_selected">
            <ImageView
                android:id="@+id/account_img"
                android:layout_width="@dimen/woying_36_dip"
                android:layout_height="@dimen/woying_36_dip"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/woying_7_dip"
                android:src="@drawable/default_me_myimg"/>
            <TextView
                android:id="@+id/yun_account"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/woying_5_dip"
                android:layout_height="match_parent"
                android:textColor="@color/font_black"
                android:textSize="@dimen/woying_14_dip"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/connect"
            android:layout_below="@id/yun_account_ll"
            android:layout_marginTop="@dimen/woying_10_dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/yun_remove_connect"/>
        <TextView
            android:id="@+id/app_name"
            android:layout_marginTop="@dimen/woying_10_dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="@dimen/woying_14_dip"
            android:textColor="@color/font_black"
            android:layout_centerHorizontal="true"/>
        <LinearLayout
            android:id="@+id/local_account_ll_one"
            android:layout_below="@id/app_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/woying_50_dip"
            android:layout_marginTop="@dimen/woying_10_dip"
            android:layout_marginLeft="@dimen/woying_15_dip"
            android:layout_marginRight="@dimen/woying_15_dip"
            android:orientation="horizontal"
            android:background="@drawable/edit_not_selected">
            <ImageView
                android:id="@+id/local_account_img_one"
                android:layout_width="@dimen/woying_36_dip"
                android:layout_height="@dimen/woying_36_dip"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/woying_7_dip"
                android:src="@drawable/default_me_myimg"/>
            <TextView
                android:id="@+id/local_account_one"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/woying_5_dip"
                android:layout_height="match_parent"
                android:textColor="@color/font_black"
                android:textSize="@dimen/woying_14_dip"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/auth_code_info"
            android:layout_below="@id/rl_phone_email_info"
            android:layout_marginTop="@dimen/woying_20_dip"
            android:layout_width="match_parent"
            android:layout_height="@dimen/woying_50_dip">
            <EditText
                android:id="@+id/et_auth_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:layout_marginLeft="@dimen/woying_15_dip"
                android:layout_marginRight="@dimen/woying_15_dip"
                android:hint="@string/input_auth_code_hint"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLines="1"
                android:paddingLeft="@dimen/woying_1_dip"
                android:textColor="@color/font_gray"
                android:textSize="@dimen/woying_14_dip"/>
            <Button
                android:id="@+id/get_autn_code_button"
                android:layout_width="@dimen/woying_110_dip"
                android:layout_height="@dimen/woying_35_dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/woying_15_dip"
                android:background="@drawable/round_yun_btn"
                android:text="@string/button_get_auth_code"
                android:textColor="@color/font_blue"
                android:textSize="@dimen/woying_12_dip" />
            <View
                android:id="@+id/fenge"
                android:layout_below="@id/get_autn_code_button"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/woying_3_dip"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/woying_15_dip"
                android:layout_marginRight="@dimen/woying_15_dip"
                android:background="@color/font_blue"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/woying_50_dip"
            android:orientation="horizontal"
            android:weightSum="2">
            <TextView
                android:id="@+id/cancel"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:textSize="@dimen/woying_14_dip"
                android:textColor="@color/font_blue"
                android:layout_gravity="center"
                android:gravity="center_horizontal"/>
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="@color/gray_line"/>
            <TextView
                android:id="@+id/make_sure"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_disconnect"
                android:textSize="@dimen/woying_14_dip"
                android:textColor="@color/font_blue"
                android:layout_gravity="center"
                android:gravity="center_horizontal"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>