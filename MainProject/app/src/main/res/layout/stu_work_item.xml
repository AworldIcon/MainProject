<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/ripple_orange"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/woying_10_dip"
    android:paddingTop="@dimen/woying_7_dip"
    android:paddingBottom="@dimen/woying_7_dip"
    android:orientation="vertical">
    <TextView
        android:id="@+id/work_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/font_black"
        android:textSize="@dimen/woying_14_dip"
        android:maxLength="20"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/work_name"
        android:layout_marginTop="@dimen/woying_6_dip"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/woying_12_dip"
            android:text="题量:"/>
        <TextView
            android:id="@+id/work_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/woying_12_dip"
            android:text="10"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font_gray"
            android:layout_marginLeft="@dimen/woying_10_dip"
            android:textSize="@dimen/woying_12_dip"
            android:text="满分:"/>
        <TextView
            android:id="@+id/work_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/woying_12_dip"
            android:text="100"/>
        <TextView
            android:id="@+id/my_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font_gray"
            android:layout_marginLeft="@dimen/woying_10_dip"
            android:textSize="@dimen/woying_12_dip"
            android:visibility="gone"
            android:text="得分:"/>
        <TextView
            android:id="@+id/get_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font_red"
            android:textSize="@dimen/woying_12_dip"
            android:visibility="gone"
            android:text="100"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/woying_5_dip"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/time_work"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_gray"
                android:textSize="@dimen/woying_12_dip"
                android:text="有效期至:2017.3.20-2017.5.20"/>
            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_gray"
                android:textSize="@dimen/woying_12_dip"
                android:layout_marginLeft="@dimen/woying_15_dip"
                android:text="完成"/>
        </LinearLayout>

</LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/department_go"
        android:layout_marginRight="@dimen/woying_5_dip"
        android:layout_centerVertical="true"/>
</RelativeLayout>