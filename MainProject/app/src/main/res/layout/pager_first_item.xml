<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/woying_20_dip"
        android:layout_marginLeft="@dimen/woying_28_dip" >
    
      <TextView 
        android:id="@+id/question_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/single_choice_type"
        android:textColor="@color/font_black"
        android:textSize="@dimen/woying_14_dip"/>
    
      <TextView 
        android:id="@+id/question_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/font_black"
        android:textSize="@dimen/woying_14_dip"
        android:layout_marginLeft="@dimen/woying_2_dip"/>
        
    </LinearLayout>

</LinearLayout>
