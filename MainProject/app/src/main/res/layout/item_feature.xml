<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_orange"
    >

    <ImageView
        android:id="@+id/head"
        android:layout_width="@dimen/woying_46_dip"
        android:layout_height="@dimen/woying_46_dip"
        android:layout_centerHorizontal="true"
        android:src="@drawable/default_me_myimg"
        />

    <TextView
        android:id="@+id/name"
        style="@style/font_normal_small_single"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/woying_6_dip"
        android:layout_marginBottom="@dimen/woying_16_dip"
        android:layout_below="@+id/head"
        android:layout_centerHorizontal="true"
        android:maxWidth="@dimen/woying_50_dip"
        android:gravity="center" />

    <TextView
        android:id="@+id/unReadNumber"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/head"
        android:textColor="@color/font_white"
        android:gravity="center"
        android:textSize="@dimen/woying_8_dip"
        android:paddingTop="@dimen/woying_2_dip"
        android:paddingBottom="@dimen/woying_2_dip"
        android:paddingLeft="@dimen/woying_4_dip"
        android:paddingRight="@dimen/woying_4_dip"
        android:background="@drawable/circle_red_chat"/>


</RelativeLayout>