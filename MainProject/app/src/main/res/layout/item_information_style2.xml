<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/ripple_orange"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/woying_10_dip"
    android:paddingRight="@dimen/woying_10_dip"
    android:paddingBottom="@dimen/woying_10_dip">


    <TextView
        android:id="@+id/title"
        style="@style/font_normal_single"
        android:layout_marginTop="@dimen/woying_10_dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="" />

    <RelativeLayout
        android:id="@+id/imageRy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/woying_6_dip"
        android:visibility="gone">

        <ImageView
            android:id="@+id/image0"
            style="@style/image_information"
            />

        <ImageView
            android:id="@+id/image1"
            style="@style/image_information"
            android:layout_centerInParent="true"
             />

        <ImageView
            android:id="@+id/image2"
            style="@style/image_information"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/woying_6_dip"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/comeFrom"
            style="@style/font_gray_small_single"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="" />

        <TextView
            android:id="@+id/time"
            style="@style/font_gray_small_single"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

    </LinearLayout>

</LinearLayout>
