    <!--AppCompatActivity实现全屏设置-->
    <style name="FullScreenStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/welcome_bg</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/first_theme</item>
        <item name="colorPrimaryDark">@color/first_theme</item>
        <item name="colorAccent">@color/first_theme</item>
        <item name="android:listDivider">@drawable/divider</item>
    </style>


    <!--Toolbar弹出层样式 -->
    <style name="OverflowMenuStyle" parent="@style/Widget.AppCompat.Light.PopupMenu.Overflow">
        <!-- 是否覆盖锚点，默认为true，即盖住Toolbar -->
        <item name="overlapAnchor">false</item>
        <!-- 弹出层字体颜色 -->
        <item name="android:textColorSecondary">@color/font_white</item>
        <!-- 弹出层背景颜色 -->
        <item name="android:colorBackground">@color/first_theme</item>
        <!-- 弹出层水平方向上的偏移，即距离屏幕左边的距离，负值会导致右边出现空隙 -->
        <item name="android:dropDownHorizontalOffset">-10dp</item>
    </style>


    <style name="OverflowMenuStyleTop" parent="@style/Widget.AppCompat.Light.PopupMenu.Overflow">
        <!-- 是否覆盖锚点，默认为true，即盖住Toolbar -->
        <item name="overlapAnchor">false</item>
        <!-- 弹出层字体颜色 -->
        <item name="android:textColorSecondary">@color/font_white</item>
        <!-- 弹出层背景颜色 -->
        <item name="android:colorBackground">@color/first_theme</item>
        <item name="android:dropDownVerticalOffset">@dimen/woying_35_dip</item>
        <item name="android:dropDownHorizontalOffset">-10dp</item>
    </style>

    <style name="Toolbar_Marg_Top" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/first_theme</item>
        <item name="colorPrimaryDark">@color/first_theme</item>
        <item name="colorAccent">@color/first_theme</item>
        <item name="actionMenuTextAppearance">@style/ToolbarMenuTextSize</item>
        <!-- 加入toolbar溢出【弹出】菜单的风格 -->
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyleTop</item>

    </style>

    <style name="Toolbar" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/first_theme</item>
        <item name="colorPrimaryDark">@color/first_theme</item>
        <item name="colorAccent">@color/first_theme</item>
        <item name="actionMenuTextAppearance">@style/ToolbarMenuTextSize</item>
        <!-- 加入toolbar溢出【弹出】菜单的风格 -->
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>

    </style>

    <style name="image_horizontal_large">
        <item name="android:layout_width">@dimen/woying_120_dip</item>
        <item name="android:layout_height">@dimen/woying_74_dip</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="image_big_vertical">
        <item name="android:layout_width">@dimen/woying_140_dip</item>
        <item name="android:layout_height">@dimen/woying_220_dip</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="image_vertical_style">
        <item name="android:layout_width">@dimen/woying_140_dip</item>
        <item name="android:layout_height">@dimen/woying_76_dip</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="image_big_vertical2">
        <item name="android:layout_width">@dimen/woying_140_dip</item>
        <item name="android:layout_height">@dimen/woying_200_dip</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="image_information">
        <item name="android:layout_width">@dimen/woying_90_dip</item>
        <item name="android:layout_height">@dimen/woying_64_dip</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="image_vertical_style2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/woying_116_dip</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="StyleProgressBarMini" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">50dip</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:progressDrawable">@drawable/shape_progressbar_mini</item>
    </style>

    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    //toolbar标题文字大小样式

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/woying_16_dip</item>
    </style>

    <!-- toolbar菜单文字尺寸 -->
    <style name="ToolbarMenuTextSize" parent="@style/TextAppearance.AppCompat.Menu">
        <item name="android:textSize">@dimen/woying_14_dip</item>
    </style>

    <style name="font_light_gray_small_single">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/font_light_gray</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="setting_textview_style" parent="@android:style/Widget.TextView">
        <item name="android:background">@drawable/setting_textview_bg</item>
    </style>

    <style name="style_text0">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/font_question_blue</item>
    </style>

    <style name="style_text1">
        <item name="android:textSize">14dip</item>
        <item name="android:textColor">@color/font_black</item>
    </style>

    <style name="style_text2">
        <item name="android:textSize">12dip</item>
        <item name="android:textColor">@color/font_gray</item>
    </style>

    <!-- popwindwo竖向动画 -->
    <style name="AnimationPopup" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/enter_dropdown</item>
        <item name="@android:windowExitAnimation">@anim/exit_dropup</item>
    </style>

    <!--自定义switch的按钮和轨迹颜色theme-->
    <style name="mySwitch" parent="Theme.AppCompat.Light">
        <!-- switch 打开时的按钮的颜色 主题色 -->
        <item name="colorControlActivated">@color/first_theme</item>
        <!--  switch关闭时的按钮的颜色   按默认-->
        <!--<item name="colorSwitchThumbNormal">@color/bg_dark_gray</item>-->
        <!-- switch关闭时的轨迹的颜色   按默认-->
        <!--<item name="android:colorForeground">@color/bg_dark_gray</item>-->
    </style>

    <!--问答详情采纳答案-->
    <style name="roomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_drawable</item>
        <item name="android:minHeight">20dip</item>
        <item name="android:maxHeight">20dip</item>
        <item name="android:isIndicator">true</item>
    </style>


    <style name="markRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_drawable_big</item>
        <item name="android:minHeight">26dip</item>
        <item name="android:maxHeight">26dip</item>
    </style>

    <style name="AppTheme.Toolbar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.Toolbar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="custom_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:textColor">@color/first_theme</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>
